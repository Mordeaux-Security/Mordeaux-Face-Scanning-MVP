# Diabetes Crawler Configuration
# Copy this file to .env and customize as needed

# ============================================
# Redis Configuration
# ============================================
# For local development with docker-compose, use:
redis_url=redis://localhost:6379/0
# For Docker containers, use:
# redis_url=redis://redis:6379/0

# ============================================
# MinIO/S3 Storage Configuration
# ============================================
# For local development with docker-compose, use:
s3_endpoint=http://localhost:9000
s3_access_key=MINIOADMIN
s3_secret_key=MINIOADMIN
s3_region=us-east-1
s3_bucket_raw=raw-images
s3_bucket_thumbs=thumbnails
s3_bucket_posts=raw-images
s3_use_ssl=false

# ============================================
# GPU Worker Configuration
# ============================================
gpu_worker_enabled=true
# For local development (GPU worker on host):
gpu_worker_url=http://localhost:8765
# For Docker containers accessing host GPU worker:
# gpu_worker_url=http://host.docker.internal:8765

# ============================================
# Qdrant Vector Database (Optional)
# ============================================
vectorization_enabled=true
qdrant_url=http://localhost:6333
vector_index=faces_v1
default_tenant_id=crawler

# ============================================
# Worker Configuration
# ============================================
# Adjust based on your system resources
num_crawlers=3
num_extractors=8
num_gpu_processors=1
num_storage_workers=1

# ============================================
# Crawling Limits
# ============================================
nc_max_pages_per_site=10
nc_max_images_per_site=10
nc_max_posts_per_site=100
nc_strict_limits=true

# ============================================
# Logging
# ============================================
log_level=info
nc_debug_logging=true
nc_gpu_worker_logging=true
nc_diagnostic_logging=true

# ============================================
# Skip Validation (for offline development)
# ============================================
# Set to 1 to skip Redis validation on startup
# SKIP_REDIS_VALIDATION=0

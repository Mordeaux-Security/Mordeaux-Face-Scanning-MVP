ENVIRONMENT=production
LOG_LEVEL=info
TZ=America/Los_Angeles

# RDS
POSTGRES_HOST=<your-rds-endpoint>
POSTGRES_PORT=5432
POSTGRES_DB=mordeaux
POSTGRES_USER=mordeaux
POSTGRES_PASSWORD=<inject at runtime or use Secrets Manager>

# S3 (native AWS)
S3_ENDPOINT=
S3_REGION=us-east-1
S3_BUCKET_RAW=mordeaux-raw
S3_BUCKET_THUMBS=mordeaux-thumbs
S3_USE_SSL=true
# Leave ACCESS/SECRET empty to use role-based auth
S3_ACCESS_KEY=
S3_SECRET_KEY=

# Redis (ElastiCache)
REDIS_URL=redis://<elasticache-endpoint>:6379/0
CELERY_BROKER_URL=redis://<elasticache-endpoint>:6379/1
CELERY_RESULT_BACKEND=redis://<elasticache-endpoint>:6379/2

# Vector (Pinecone)
PINECONE_API_KEY=<set via Secrets or here temporarily>
PINECONE_INDEX=faces
VECTOR_INDEX=faces

ASGI_WORKERS=4
VITE_API_BASE=/api
NGINX_MAX_BODY=50m
ENABLE_GPU=0

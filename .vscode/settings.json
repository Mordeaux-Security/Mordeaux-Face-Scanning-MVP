{
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
        "source.fixAll": true,
        "source.organizeImports": true
    },
    // Use Ruff for Python
    "python.formatting.provider": "none",
    "ruff.lint.enable": true,
    "ruff.format.enable": true,
    "ruff.organizeImports": true
}